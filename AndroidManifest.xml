<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.max2idea.android.limbo.main"
          android:versionCode="9"
          android:versionName="0.9.5-TEST-A"
>
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
    <application android:label="Limbo" android:icon="@drawable/limbo"
    debuggable="true"
    android:hardwareAccelerated="true" >
        <activity android:name=".LimboActivity"
                  android:label="Limbo PC Emulator"
                  android:screenOrientation="landscape"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity class=".PFileManager"
                  android:name=".PFileManager"
                  android:label="Choose a File"
        >
            <intent-filter>
                <action android:value="android.intent.action.VIEW"
                        android:name="PFileManager"/>
                <category android:value="android.intent.category.NORMAL"
                          android:name="PFileManager"/>
            </intent-filter>

        </activity>
        <activity class=".SDLActivityCompatibility"
            android:name=".SDLActivityCompatibility"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  >
            <intent-filter>
                <action android:value="android.intent.action.VIEW"
                        android:name="org.libsdl.app.SDLActivity"/>
                <category android:value="android.intent.category.NORMAL"
                          android:name="org.libsdl.app.SDLActivity"/>
            </intent-filter>
        </activity>
        <activity class="org.libsdl.app.SDLActivity"
            android:name="org.libsdl.app.SDLActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  >
            <intent-filter>
                <action android:value="android.intent.action.VIEW"
                        android:name="org.libsdl.app.SDLActivity"/>
                <category android:value="android.intent.category.NORMAL"
                          android:name="org.libsdl.app.SDLActivity"/>
            </intent-filter>
        </activity>
        <activity android:name="LimboVNCActivity"
                  android:screenOrientation="landscape"
                  android:windowSoftInputMode="adjustPan"
        >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:screenOrientation="landscape"
                  android:windowSoftInputMode="adjustPan"
                  android:name="VncCanvasActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="vnc" />
            </intent-filter>
        </activity>
        <activity android:name="com.mopub.mobileads.MoPubActivity"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name="com.mopub.mobileads.MraidActivity"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name="com.mopub.mobileads.MraidBrowser"
                  android:configChanges="keyboardHidden|orientation"/>
        <activity android:name="com.mopub.simpleadsdemo.BannersTab" />
        <activity android:name="com.mopub.simpleadsdemo.InterstitialsTab" />
        <activity android:name="com.mopub.simpleadsdemo.ConsoleTab" />
        <activity android:name="com.mopub.simpleadsdemo.AboutTab" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>

